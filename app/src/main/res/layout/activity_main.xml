<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blades in the Dark dice app"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.022"
            android:id="@+id/appTitle" android:textSize="24sp" android:textStyle="bold"/>
    <Button
            android:text="Start Roll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rollbutton" android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/soundButton" android:layout_marginStart="8dp"
            android:onClick="startRoll"/>
    <Button
            android:text="sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/soundButton" android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/debugText" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/rollbutton"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/appTitle" android:textSize="30sp"/>

</android.support.constraint.ConstraintLayout>